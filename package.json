{
  "name": "sales-record-system",
  "version": "1.0.0",
  "description": "Sales Record System (SRS) - Offline bookkeeping",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "tsc && vite build && electron-builder",
    "electron:dist": "tsc && vite build && electron-builder --win",
    "publish:github": "npm run electron:build && npx electron-builder --publish=always"
  },
  "dependencies": {
    "@google/genai": "^1.33.0",
    "date-fns": "^3.3.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "jimp": "^1.6.0",
    "lucide-react": "^0.344.0",
    "png-to-ico": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.smartbooks.ai",
    "productName": "Sales Record System (SRS)",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "directories": {
      "buildResources": "assets"
    }
    ,
    "publish": [
      {
        "provider": "github",
        "owner": "omarmirajiomar-cmyk",
        "repo": "Sales_Record_System_Project"
      }
    ]
  }
}
